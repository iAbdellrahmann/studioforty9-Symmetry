    }
    .sidebar h2{
      color:#004289;
      font-size: 30px;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      text-transform: uppercase;

    }
  </style>
<div class="container-sidebar">
  

<div class="article-content">
  {{ page.content }}
</div>
  <div class="sidebar-container">
  <div class="sidebar">
    <h2>Sidebar</h2>
    <ul id="sidebarTitles"></ul>
  </div>
    </div>
</div>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const articleContent = document.querySelector('.article-content');
      const sidebarTitles = document.getElementById('sidebarTitles');
      const headings = articleContent.querySelectorAll('h2');

      headings.forEach(function(heading) {
        const listItem = document.createElement('li');
        const link = document.createElement('a');
        link.textContent = heading.textContent;
        link.setAttribute('href', `#${heading.id}`);
        listItem.appendChild(link);
        sidebarTitles.appendChild(listItem);
      });

  
      const headingPositions = Array.from(headings).map(heading =>
        heading.getBoundingClientRect().top + window.scrollY
      );


      function toggleBoldness() {
        const scrollPosition = window.scrollY;

        headingPositions.forEach((position, index) => {
          const listItem = sidebarTitles.children[index];
          if (scrollPosition >= position) {
            listItem.classList.add('bold');
          } else {
            listItem.classList.remove('bold');
          }
        });
      }

      window.addEventListener('scroll', toggleBoldness);
    });
  </script>


